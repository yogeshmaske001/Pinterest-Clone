 
<% include ./partials/header.ejs %>
 <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white relative">
  <!-- Cards Grid -->
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){ %>
      <div class="card w-32 cursor-pointer">
        <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
          <!-- Zoomable Image -->
          <img 
            src="/images/uploads/<%= elem.image %>" 
            alt="Post Image" 
            class="w-full h-full object-cover  cursor-zoom-in zoomable" 
            data-image="/images/uploads/<%= elem.image %>">
        </div>
        <h5 class="mt-2 text-sm"><%= elem.title %></h5>
        <h5 class="text-sm font-medium opacity-60">@<%= elem.user.username %></h5>
      </div>
    <% }) %>
  </div>

  <!-- Zoom Modal -->
  <div id="imageModal" 
       class="fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center hidden z-50">
    <img id="modalImage" 
         src="" 
         alt="Zoomed Image" 
         class="max-w-[90%] max-h-[90%] rounded-lg cursor-zoom-out shadow-lg" />
  </div>
</div>

